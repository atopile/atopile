{
    "name": "atopile",
    "displayName": "atopile",
    "icon": "ato_logo_256x256.png",
    "description": "IDE support for atopile.",
    "version": "0.6.0",
    "preview": false,
    "publisher": "atopile",
    "license": "MIT",
    "homepage": "https://github.com/atopile/atopile",
    "repository": {
        "type": "git",
        "url": "https://github.com/atopile/atopile.git",
        "directory": "src/vscode-atopile/"
    },
    "bugs": {
        "url": "https://github.com/atopile/atopile/issues"
    },
    "keywords": [
        "atopile"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters",
        "Snippets"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with atopile."
        },
        "hoverProvider": "true"
    },
    "activationEvents": [
        "onLanguage:atopile",
        "workspaceContains:*.ato"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js"
    },
    "contributes": {
        "snippets": [
            {
                "language": "ato",
                "path": "./snippets/snippets.json"
            }
        ],
        "configuration": {
            "properties": {
                "atopile.ato": {
                    "description": "When set to a path to atopile binary, extension will use that. NOTE: Using this option may slow down server response time.",
                    "scope": "resource",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "atopile",
                "command": "atopile.restart"
            },
            {
                "command": "atopile.create",
                "title": "Create a project / build target / component",
                "category": "atopile",
                "when": "editorLangId == ato"
            },
            {
                "command": "atopile.build",
                "title": "Build",
                "category": "atopile",
                "when": "editorLangId == ato"
            },
            {
                "command": "atopile.add",
                "title": "Add a dependency",
                "category": "atopile",
                "when": "editorLangId == ato"
            },
            {
                "command": "atopile.remove",
                "title": "Remove a dependency",
                "category": "atopile",
                "when": "editorLangId == ato"
            },
            {
                "command": "atopile.choose_build",
                "title": "Choose build target",
                "category": "atopile",
                "when": "editorLangId == ato"
            },
            {
                "command": "atopile.launch_kicad",
                "title": "Launches KiCAD PCB Editor with the current board",
                "category": "atopile",
                "when": "editorLangId == ato"
            }
        ],
        "languages": [
            {
                "id": "ato",
                "aliases": [
                    "atopile",
                    "ato"
                ],
                "extensions": [
                    ".ato"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ato",
                "scopeName": "source.ato",
                "path": "./syntaxes/ato.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "fs-extra": "^11.2.0",
        "ovsx": "^0.10.1",
        "vscode-languageclient": "^9.0.1",
        "vscode-variables": "^1.0.1",
        "which": "^5.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "16.x",
        "@types/vscode": "1.78.0",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.19.0",
        "@vscode/test-electron": "^2.4.0",
        "@vscode/vsce": "^3.2.1",
        "eslint": "^9.17.0",
        "glob": "^10.4.2",
        "prettier": "^3.4.2",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4"
    }
}
